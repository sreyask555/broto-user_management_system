<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>
    <%= locals.title ? title : 'Brocamp Login' %>
  </title>
  <!-- Bootstrap-CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <!-- Root-CSS -->
  <link rel="stylesheet" href="/css/signup.css">
</head>

<body>

  <div class="col-lg-6 container mt-5 pb-3 border rounded-5 shadow">
    <form action="/adduser" method="POST">
      <div class="d-flex flex-column align-items-center text-center">
        <img class="img-fluid w-25 mt-5 mb-4" src="/img/brocamp.png" alt="">

        <h2 class="mb-3">Create a new User</h2>

        <div class="col-lg-8 form-floating mb-4">
          <input name="user" type="text" class="form-control border rounded-3" id="nameInput"
            placeholder="" required>
          <label for="nameInput">Name</label>
        </div>

        <div class="col-lg-8 form-floating mb-4">
          <input name="email" type="email" class="form-control border rounded-3" id="emailInput"
            placeholder="name@example.com" required>
          <label for="emailInput">Email Address</label>
        </div>

        <div class="col-lg-8 form-floating mb-4">
          <input name="password" type="password" class="form-control border rounded-3" id="passwordInput"
            placeholder="Password" required>
          <label for="passwordInput">Password</label>
        </div>

        <div class="col-lg-8 form-floating mb-4">
          <input name="broid" type="number" class="form-control border rounded-3" id="broidInput"
            placeholder="" required>
          <label for="broidInput">Brocamp ID</label>
        </div>

        <div class="col-lg-8 form-floating mb-4">
          <input name="batch" type="text" class="form-control border rounded-3" id="batchInput"
            placeholder="" required>
          <label for="batchInput">Batch</label>
        </div>

        <div class="d-flex gap-3">
          <a href="/adminhome"><button class="btn btn-danger" type="button">Cancel</button></a>
          <button class="btn btn-success" type="submit">Add User</button>
      </div>

      </div>
    </form>
  </div>

  <!-- Login-JS -->
  <script src="/js/signup.js"></script>
  <!-- Bootstrap-JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
    integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
    crossorigin="anonymous"></script>
</body>

</html>